<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>agenda-servlets</display-name>
  <!-- Servlet boas vindas -->
  <servlet>
  	<servlet-name>HelloServlets</servlet-name>
  	<servlet-class>br.com.agenda.servlets.HelloServlets</servlet-class>  
  </servlet>
  <servlet-mapping>
  	<servlet-name>HelloServlets</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <!-- Servlet mensagem -->
  <servlet>
  	<servlet-name>MensagemServlet</servlet-name>
  	<servlet-class>br.com.agenda.servlets.MensagemServlets</servlet-class>  
  </servlet>
  <servlet-mapping>
  	<servlet-name>MensagemServlet</servlet-name>
  	<url-pattern>/formulario</url-pattern>
  </servlet-mapping>
  
  <!-- Mensagem recebida -->
  <servlet>
  	<servlet-name>ReceberMensagemServlet</servlet-name>
  	<servlet-class>br.com.agenda.servlets.ReceberMensagemServlets</servlet-class>  
  </servlet>
  <servlet-mapping>
  	<servlet-name>ReceberMensagemServlet</servlet-name>
  	<url-pattern>/receberMensagem</url-pattern>
  </servlet-mapping>
  
  <!-- servelet semantico -->
  <servlet>
  	<servlet-name>MensagemSemanticaServlet</servlet-name>
  	<servlet-class>br.com.agenda.servlets.MensagemSemanticaServlets</servlet-class>  
  </servlet>
  <servlet-mapping>
  	<servlet-name>MensagemSemanticaServlet</servlet-name>
  	<url-pattern>/mensagem</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
</web-app>